<section class="relative bg-orange-500 px-4 py-8 md:py-12 lg:py-16 overflow-hidden">
  <!-- Stars decoration -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-4 left-4 w-2 h-2 bg-black rounded-full"></div>
    <div class="absolute top-8 right-8 w-3 h-3 bg-black rounded-full"></div>
    <div class="absolute top-16 left-12 w-2 h-2 bg-black rounded-full"></div>
    <div class="absolute bottom-8 right-4 w-2 h-2 bg-black rounded-full"></div>
    <div class="absolute bottom-12 left-8 w-3 h-3 bg-black rounded-full"></div>
    <div class="absolute top-1/2 right-12 w-2 h-2 bg-black rounded-full"></div>
    <div class="absolute top-1/3 left-1/4 w-2 h-2 bg-black rounded-full"></div>
    <div class="absolute bottom-1/4 right-1/3 w-3 h-3 bg-black rounded-full"></div>
  </div>
  
  <div class="relative z-10 max-w-6xl mx-auto">
    <!-- "In conjunction with" text -->
    <p class="text-gray-900 text-sm md:text-base mb-4 md:mb-6 font-medium">In conjunction with</p>
    
    <!-- Main 25 Tahun section -->
    <div class="flex flex-col md:flex-row items-start md:items-center gap-4 md:gap-6 mb-6 md:mb-8">
      <!-- 25 dengan black blob background -->
      <div class="relative">
        <div class="absolute inset-0 bg-black rounded-3xl transform rotate-2 opacity-80"></div>
        <div class="relative bg-black rounded-3xl px-6 py-4 md:px-10 md:py-6 transform -rotate-1">
          <span class="text-lime-400 text-6xl md:text-8xl lg:text-9xl font-black" style="font-family: 'Space Grotesk', sans-serif; text-shadow: 2px 2px 0px rgba(34, 197, 94, 0.3);">
            25
          </span>
        </div>
      </div>
      
      <!-- Tahun text -->
      <div class="flex items-center">
        <span class="text-lime-400 text-4xl md:text-6xl lg:text-7xl font-black" style="font-family: 'Space Grotesk', sans-serif;">
          Tahun
        </span>
      </div>
    </div>
    
    <!-- demajors dan ruangrupa -->
    <div class="flex flex-col md:flex-row items-start md:items-center gap-3 md:gap-6">
      <div class="flex items-center gap-2 md:gap-4">
        <span class="text-gray-900 text-lg md:text-xl font-semibold">demajors</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 md:h-8 md:w-8 text-gray-900" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg>
        <div class="w-8 h-8 md:w-10 md:h-10 border-2 border-gray-900 flex items-center justify-center">
          <div class="w-full h-full flex flex-col items-center justify-center gap-1">
            <div class="w-3 h-0.5 bg-gray-900"></div>
            <div class="w-3 h-0.5 bg-gray-900"></div>
            <div class="w-3 h-0.5 bg-gray-900"></div>
          </div>
        </div>
      </div>
      
      <div class="flex items-center gap-2">
        <span class="text-gray-900 text-lg md:text-xl font-semibold">ruangrupa</span>
      </div>
    </div>
  </div>
</section>

<!-- Page Indicator Dots -->
<div class="flex justify-center gap-2 py-4 bg-yellow-400">
  <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
  <div class="w-2 h-2 rounded-full bg-blue-500"></div>
</div>

