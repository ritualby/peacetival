---
interface IconItem {
  name: string;
  icon: string;
  customImage?: string;
}

const icons: IconItem[] = [
  { name: "Line Up", icon: "microphone", customImage: "https://i.imgur.com/8HHbV1Y.png" },
  { name: "Rundown", icon: "calendar", customImage: "https://i.imgur.com/8gEbbn2.png" },
  { name: "Venue Map", icon: "map", customImage: "https://i.imgur.com/GvkBmJQ.png" },
  { name: "Ticket", icon: "ticket", customImage: "https://i.imgur.com/2c1ajRb.png" },
  { name: "Merchandise", icon: "shirt", customImage: "https://i.imgur.com/pXYBZB2.png" },
  { name: "Foods & Drinks", icon: "food", customImage: "https://i.imgur.com/CV5ix2s.png" },
  { name: "EJPeace Radio", icon: "radio", customImage: "https://i.imgur.com/fdOU4LK.png" },
  { name: "Live Streaming", icon: "streaming", customImage: "https://i.imgur.com/fdOU4LK.png" },
  { name: "News", icon: "news", customImage: "https://i.imgur.com/fdOU4LK.png" },
];
---

<section class="bg-yellow-400 px-4 py-4 md:py-6 lg:py-8">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-3 gap-4 md:gap-6 lg:gap-8">
      {icons.map((item) => (
        <a 
          href={`#${item.name.toLowerCase().replace(/\s+/g, '-')}`}
          class="flex flex-col items-center justify-center group hover:scale-110 transition-transform duration-200 cursor-pointer gap-1"
        >
          <!-- Icon Only -->
          <div class="flex items-center justify-center">
            {item.customImage ? (
              <!-- Custom Image Icon -->
              <img 
                src={item.customImage} 
                alt={item.name}
                class={`object-contain drop-shadow-lg group-hover:drop-shadow-xl transition-all ${
                  item.icon === "radio" || item.icon === "streaming" || item.icon === "news"
                    ? "w-16 h-16 md:w-20 md:h-20 lg:w-24 lg:h-24"
                    : "w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28"
                }`}
              />
            ) : item.icon === "radio" ? (
              <!-- Synchronize Radio Icon: Vintage radio with notes -->
              <svg class="w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 drop-shadow-lg group-hover:drop-shadow-xl transition-all" fill="currentColor" viewBox="0 0 24 24">
                <!-- Radio body -->
                <rect x="4" y="8" width="16" height="10" rx="2" fill="white"/>
                <rect x="2" y="16" width="20" height="2" rx="1" fill="white"/>
                <!-- Speaker grille -->
                <circle cx="10" cy="13" r="2" fill="white" opacity="0.3"/>
                <circle cx="10" cy="13" r="1" fill="white" opacity="0.5"/>
                <!-- Tuning dial -->
                <circle cx="18" cy="13" r="1.5" fill="white"/>
                <path d="M18 11.5v3" stroke="white" stroke-width="1.5" fill="none"/>
                <!-- Musical notes emanating -->
                <circle cx="20" cy="6" r="0.8" fill="white"/>
                <path d="M20 6.8v2" stroke="white" stroke-width="1" fill="none"/>
                <circle cx="22" cy="7" r="0.6" fill="white"/>
                <path d="M22 7.6v1.5" stroke="white" stroke-width="1" fill="none"/>
                <circle cx="5" cy="6" r="0.8" fill="white"/>
                <path d="M5 6.8v2" stroke="white" stroke-width="1" fill="none"/>
              </svg>
            ) : item.icon === "streaming" ? (
              <!-- Live Streaming Icon: TV screen with play button -->
              <svg class="w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 drop-shadow-lg group-hover:drop-shadow-xl transition-all" fill="currentColor" viewBox="0 0 24 24">
                <!-- TV screen -->
                <rect x="3" y="4" width="18" height="12" rx="2" fill="white"/>
                <rect x="5" y="6" width="14" height="8" rx="1" fill="white" opacity="0.3"/>
                <!-- Play button -->
                <path d="M10 9l5 3-5 3V9z" fill="white"/>
                <!-- Stand -->
                <rect x="9" y="16" width="6" height="3" rx="1" fill="white"/>
                <rect x="8" y="18" width="8" height="2" rx="1" fill="white"/>
                <!-- Notes -->
                <circle cx="18" cy="6" r="0.8" fill="white"/>
                <path d="M18 6.8v2" stroke="white" stroke-width="1" fill="none"/>
                <circle cx="6" cy="8" r="0.6" fill="white"/>
                <path d="M6 8.6v1.5" stroke="white" stroke-width="1" fill="none"/>
              </svg>
            ) : item.icon === "news" ? (
              <!-- News Icon: Globe with NEWS banner -->
              <svg class="w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 drop-shadow-lg group-hover:drop-shadow-xl transition-all" fill="currentColor" viewBox="0 0 24 24">
                <!-- Globe -->
                <circle cx="12" cy="12" r="9" fill="white" opacity="0.9"/>
                <!-- Longitude lines -->
                <path d="M3 12h18M12 3v18" stroke="white" stroke-width="1.5" fill="none"/>
                <ellipse cx="12" cy="12" rx="9" ry="4" fill="none" stroke="white" stroke-width="1.5"/>
                <!-- NEWS banner -->
                <rect x="6" y="8" width="12" height="8" rx="1" fill="white"/>
                <path d="M7 10h10M7 12h8M7 14h10" stroke="white" stroke-width="0.5" opacity="0.3"/>
                <!-- Notes -->
                <circle cx="18" cy="6" r="0.8" fill="white"/>
                <path d="M18 6.8v2" stroke="white" stroke-width="1" fill="none"/>
                <circle cx="6" cy="18" r="0.6" fill="white"/>
                <path d="M6 18.6v1.5" stroke="white" stroke-width="1" fill="none"/>
              </svg>
            ) : null}
          </div>
          <p class="text-black text-center text-sm md:text-base lg:text-lg font-bold" style="font-family: 'Archivo', sans-serif; font-weight: 700; letter-spacing: -0.3px;">
            {item.name}
          </p>
        </a>
      ))}
    </div>
  </div>
</section>

